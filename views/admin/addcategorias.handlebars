<div class="row">
    <div class="col-md-12">
        {{#each erros}}
            <div class="alert alert-warning alert-dismissible fade show" id="success-alert" role="alert">
                {{texto}}
                <button type="button" class="close" data-dismiss="alert">x</button>
            </div>
        {{/each}}
        <h2>Adicionar categorias</h2>
    </div>
    <hr>
    <div class="col-md-12">
        <form action="/admin/categorias/nova" method="post">
            <div class="form-group">
                <label for="nome" class="form-label" >Nome:</label>
                <input type="text" name="nome" id="nome" placeholder="Nome da categoria" class="form-control">
                <label for="slug" class="form-label" >Slug:</label>
                <input type="text" name="slug" id="slug" placeholder="Slug da categoria" class="form-control">
                    <br/>
                <div class="col-md-4">
                    <button type="submit" class="btn btn-success">Criar Categoria</button>
                </div>
                    <br/>
            </div>
        </form>
    </div>
</div>
